{
  "name": "xml-validator-big-files",
  "displayName": "XML Validator for Huge Files",
  "description": "Validate & patch XML/XSD without loading entire files. LSP-based.",
  "version": "1.0.0",
  "publisher": "Njangihost",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "xml",
    "xsd",
    "validation",
    "big-files",
    "lsp",
    "streaming"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "xml.validateWithXsd",
        "title": "XML: Validate with XSD"
      },
      {
        "command": "xml.showErrorList",
        "title": "XML: Show Validation Errors"
      },
      {
        "command": "xml.previewFragment",
        "title": "XML: Preview Fragment"
      },
      {
        "command": "xml.savePatchedFile",
        "title": "XML: Save Patched File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xml-validator-explorer",
          "title": "XML Validator",
          "icon": "$(list-flat)"
        }
      ]
    },
    "views": {
      "xml-validator-explorer": [
        {
          "id": "xml-validator-errors",
          "name": "Validation Errors"
        }
      ]
    },
    "configuration": {
      "title": "XML Validator",
      "properties": {
        "xmlValidator.javaPath": {
          "type": "string",
          "default": "java",
          "description": "Path to Java executable"
        },
        "xmlValidator.serverJar": {
          "type": "string",
          "description": "Path to XML LSP Server JAR (defaults to bundled server)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "main": "./out/extension.js",
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "@types/path-browserify": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "path-browserify": "^1.0.1",
    "vscode-languageclient": "^8.1.0"
  }
}