{
  "name": "xml-validator-lsp",
  "displayName": "XML Validator with LSP",
  "description": "Validate large XML files with XSD schema using LSP server",
  "version": "1.0.0",
  "publisher": "xml-validator",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onCommand:xmlValidator.validateXML",
    "onCommand:xml.validateFiles",
    "onView:xml-validator.errorPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xmlValidator.validateXML",
        "title": "Validate XML with XSD",
        "category": "XML Validator"
      },
      {
        "command": "xml.validateFiles",
        "title": "Valider fichiers XML",
        "category": "XML"
      },
      {
        "command": "xml.patchFragment",
        "title": "Modifier le fragment XML",
        "category": "XML"
      },
      {
        "command": "xml.openValidator",
        "title": "Ouvrir le validateur XML",
        "category": "XML"
      }
    ],
    "views": {
      "xml-validator": [
        {
          "id": "xml-validator.errorPanel",
          "name": "RÃ©sultats de validation",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xml-validator",
          "title": "Validateur XML",
          "icon": "resources/icon.svg"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0",
    "vscode-jsonrpc": "^8.2.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "vsce-package": "vsce package"
  }
}
